{
  "description": "Create Angular Pipe",
  "files": [
    {
      "path": "<%= it.toKebabCase(it.name) %>.pipe.ts",
      "template": "pipe.ts.eta"
    },
    {
      "path": "<%= it.toKebabCase(it.name) %>.pipe.spec.ts",
      "template": "pipe.spec.ts.eta"
    }
  ],
  "context": {
    "input": {
      "name": {
        "type": "string",
        "description": "Pipe name (without the word 'Pipe')",
        "required": true
      }
    }
  }
}
